<!DOCTYPE html>
<html>
  <head>
    <title>Chakaboom</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render 'layouts/header.html.slim' %>

    <div class="container" >

      <% if flash[:notice] %>

          <div class="panel panel-warning">
            <div class="panel-heading">
              <h3 class="panel-title">Operation Status</h3>
            </div>
            <div class="panel-body">
              <%= flash[:notice] %>
            </div>
          </div>

      <% end %>
      <% if current_user %>
        <div class="searching">
            <form action="/chat" data-remote="true" method="get">
              <input id="search-messages" type="text" name="search" placeholder="type to search...">
              <button></button>
            </form>
        </div>
      <% end %>
      <%= yield %>
    </div>

  </body>
</html>
